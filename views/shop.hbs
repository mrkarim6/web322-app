{{!-- Check if there is a current item to display --}}
{{#if data.item}}
<div class="row">
  <section class="main col-md-9">
    <item>
      <div class="row">
        <div class="col-4">
          <h2>{{data.item.title}}</h2>
          <img
            src="{{data.item.featureImage}}"
            alt="feature Image"
            style="width:100%"
          />

        </div>

        <div class="col-8"><br />
          <br />
          <div class="row">
            <div class="col-12">
              {{data.item.body}}
              <br /><br />
              <strong>Price:</strong>
              $ {{data.item.price}}<br />
              <strong>Category:</strong>
              {{data.item.category}}<br />
              <strong>Last Updated:</strong>
              {{data.item.postDate}}
            </div>
          </div>
        </div>
      </div>
    </item>
  </section>

  <aside class="col-md-3">
    <br /><br />
     {{#if data.items}}
    <h4>Items</h4>

    <ul class="list-group">
        {{#each data.items}}
        <a href="/shop/{{id}}?category={{category}}" class="list-group-item">{{title}}</a>
      {{/each}}
    </ul>
    <br />
    {{/if}}

    {{#if data.categories}}
    <h4>Categories</h4>
    <ul class="list-group">
        {{#each data.categories}}
      <a href="/shop?category={{id}}" class="list-group-item">{{category}}</a>
       {{/each}}
    </ul>
     {{/if}}
  </aside>
</div>
{{!-- If there is no current item, display the error message --}}
{{else}}
  <div class="col-md-12 text-center">
    <h2>{{data.message}}</h2>
    <p>{{data.categoriesMessage}}</p>
  </div>
{{/if}}