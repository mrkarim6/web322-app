<div class="row">
    <div class="col-md-12">
          <h2>Items</h2>
          <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
          <hr />



  {{#if message}}
      <div class="alert alert-warning">{{message}}</div> <!-- Display the message if it exists -->
  {{else}}
    
  <table class="table">
    <thead>
      <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each categories}}
        <tr>
          <td><a href="/items?category={{id}}">{{id}}</a></td>
          <td><a href="/items?category={{id}}">{{category}}</a></td>
          <td><a href="categories/delete/{{id}}" class="btn btn-danger">Delete</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
   {{/if}}

</div>
</div>
